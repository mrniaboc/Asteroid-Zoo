.site-navigation .for-home-page
  margin: 0 auto
  overflow: hidden
  width: SITE_WIDTH

  .asteroid-bg
    background url("./images/nav-bg.jpg") no-repeat center center
    -webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    background-size cover
    background-position 0px -100px
    min-height 600px

  .content-block
    width: columns(13)
    max-width 630px
    padding-top 100px
    h1
      font-size: 48px
      font-weight: 300
      margin-bottom 50px
    p
      line-height 28px
      font-size: 16px
      margin-bottom 60px

  .action
    font-size: 16px

  .call-to-action
    @extends #_HOME_BUTTON
    border 1px solid transparent
    font-weight bold
    background-color MAIN_AQUA
    margin-right 10px

  .learn-more
    @extends #_HOME_BUTTON
    font-style italic
    border 1px solid #fff

  .social-links
    float: right
    font-size: 30px

  .social-icon
    margin: 0 0.25em

.home-page
  color: inherit
  background-color #efedee
  .white-sheet
    min-height 1400px
    background-color #fff
    margin 0 auto
    max-width 960px
    .centered-container
      width 400px
      display block
      margin 0 auto
      text-align center
      h2
        font-size 36px
        line-weight 44px
        font-weight 300
      p
        font-weight 14px
        margin 20px 0 60px 0
      img
        display block
        margin 0 auto
    .blue-overlay
      TRANSPARENT_BLUE = rgba(19, 173, 206, 0.7)
      box-shadow -25rem 0 0 TRANSPARENT_BLUE, 25rem 0 0 TRANSPARENT_BLUE
      padding-top 30px
      background TRANSPARENT_BLUE
      height 300px
      background-image url('./images/rock-bottom.png')
      background-repeat no-repeat
      background-position center 10px
      color #fff
      h2
        margin-top 50px
      p
        margin-bottom 50px
      a
        @extends #_HOME_BUTTON
        background-color #0d2d38
        border none
      @media screen and (max-width: 760px)
        box-shadow none

.footer-container
  line-height 1.5em
  background #181818
  padding 1px 0

  .zooniverse-footer
    color #2d7e86
    margin 50px auto
    max-width 880px
    .heading
      font-size 16px
      margin-bottom 40px

    .category-title
      font-weight bold
      font-size 12px

    .project
      font-size 12px
