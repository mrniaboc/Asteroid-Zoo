.science-page
  background-color rgba(239, 234, 233, 0.5)
  &:after
    @extend .moon-bg
  .content-block
    .content-container
      .left
        padding-right 10px
      .right
        padding-left 10px
      .half-column
        width 50%
        float left
        img
          width 100%
        h2
          font-size 24px
          margin-top 100px
          font-weight 300
        h3
          font-weight bold
          padding 30px 20px 10px 0px
        p
          line-height 1.5em
      .full-column
        padding 50px 20px 5px 20px
  .white-bg
    padding-bottom 100px

