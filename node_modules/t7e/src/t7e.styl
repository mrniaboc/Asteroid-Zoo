.t7e-edit-mode
  [data-t7e-key]
    outline: 1px dashed gray

    &:hover
      outline: 2px solid rgba(gray, 0.5)

  .t7e-selected
    background: rgba(yellow, 0.25)
    outline: 2px solid gray

.t7e-controls
  background: white
  border: 1px solid gray
  border-radius: 3px
  box-shadow: 0 1px 2px rgba(black, 0.33)
  color: gray
  font: bold 14px sans-serif
  padding: 5px
  position: fixed
  left: 50%
  top: 3px
  transform: translateX(-50%)
  z-index: 101

  .t7e-controls-title
    display: inline-block
    padding: 0 0.5em

  button
    background: transparent
    border: 1px solid gray
    border-radius: 2em
    box-shadow: 0 1px 2px rgba(#000, 0.25)
    color: black
    cursor: pointer
    margin: 0
    padding: 0 1em

    &:disabled
      opacity: 0.33
      pointer-events: none

  .t7e-attributes-container
    label
      display: block
