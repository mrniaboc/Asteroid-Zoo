.zooniverse-footer
  overflow: hidden
  text-align: left

  a
    color: inherit
    opacity: 0.75
    text-decoration: none

    &:hover
      opacity: 1

  .logo
    float: left
    opacity: 0.5
    width: 25%

    &:hover
      opacity: 0.67

    .zooniverse-logo
      height: 100%
      max-height: 200px
      width: 85%

  .content
    float: left
    width: 75%

  .heading
    font-size: 18px
    margin-bottom: 1em

  .projects
    font-size: 14px
    overflow: hidden

  .general
    font-size: 12px
    letter-spacing: 1px
    margin-top: 1em
    overflow: hidden
    text-transform: uppercase

  .category
    float: left
    width: 25%

  .category-title
    font-size: 10px
    font-weight: bold
    letter-spacing: 1px
    text-transform: uppercase
